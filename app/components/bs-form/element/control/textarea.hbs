<textarea
  value={{this.value}}
  class={{this.classNamesProxy}}
  ...attributes
  {{on "keypress" this.onKeyPress}}
  {{on "input" this.onInput}}
></textarea>

{{#if @maxChars}}
  <ProgressBar
    @progress={{this.progress}}
    @options={{hash strokeWidth=0.5 color="#c1bdb9" duration=0}}
    class="m-1"
  />
{{/if}}